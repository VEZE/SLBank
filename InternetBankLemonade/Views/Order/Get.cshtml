@model PagedList.IPagedList<InternetBankLemonade.Models.Orders>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Выписка";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Выписка</h2>
<div class="col-lg-12">
    <div class="container">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <tr>
                    <th><label>Услуга</label></th>
                    <th><label>Номер карты</label></th>
                    <th><label>Код платежа</label></th>
                    <th><label>Дата выставления счета</label></th>
                    <th><label>Дата платежа</label></th>
                    <th><label>Валюта</label></th>
                    <th><label>+/-</label></th>
                    <th><label>Сумма</label></th>
                    <th><label>Статус</label></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceName</td>
                        <td>@item.AccountNumber</td>
                        <td>@item.Number</td>
                        <td>@item.OrderDate</td>
                        <td>@item.TransactionDate</td>
                        <td>@item.CurrencyName</td>
                        <td>@item.Sign</td>
                        <td>@item.MoneyAmount</td>
                        <td>@item.Status</td>
                    </tr>
                }
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Get", new { page }))
        }
        else
        {
            <h2>В выбранный промежуток нет операций</h2>    
        }
        
    </div>
</div>

    




