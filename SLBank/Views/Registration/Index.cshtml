@model IEnumerable<InternetBankLemonade.Models.Users>
@{
    Layout = null;
}
<html>

@{
    string name = "";
    string surname = "";
    string lastName = "";
    string email = "";
    string tel = "";
    string passport = "";
    if (Session["Name"] != null)
    {
        name = Session["Name"].ToString();
    }
    if (Session["Surname"] != null)
    {
        surname = Session["Surname"].ToString();
    }
    if (Session["LastName"] != null)
    {
        lastName = Session["LastName"].ToString();
    }
    if (Session["Email"] != null)
    {
        email = Session["Email"].ToString();
    }
    if (Session["Tel"] != null)
    {
        tel = Session["Tel"].ToString();
    }
    if (Session["Passport"] != null)
    {
        passport = Session["Passport"].ToString();
    }
}
<head>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <script src="~/Scripts/jquery-1.12.4.min.js"></script>
        <title>Регистрация</title>
    </head>

    <body>
        <div class="container">
            <form class="form-horizontal" id="submitForm" action="~/Registration/Index" method="POST">
                @Html.AntiForgeryToken()
                <fieldset>
                    <div id="legend">
                        <legend class="">Регистрация</legend>
                    </div>
                    @if (Session["Response"] != null)
                    {
                        <div class="col-sm-12 alert alert-danger">
                            <p>@Session["Response"].ToString()</p>
                        </div>
                        Session["Response"] = null;
                    }
                    <div class="form-group">
                        <label for="inputSurname" class="control-label col-sm-2">Фамилия</label>
                        <div class="col-sm-8">
                            <input type="text" required autocomplete="off" maxlength="40" name="Surname" class="form-control" id="inputSurname" value="@surname" placeholder="Фамилия">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputFirstName" class="control-label col-sm-2">Имя</label>
                        <div class="col-sm-8">
                            <input type="text" required autocomplete="off" maxlength="40" name="Name" class="form-control" id="inputFirstName" value="@name" placeholder="Имя">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSecondName" class="control-label col-sm-2">Отчество</label>
                        <div class="col-sm-8">
                            <input type="text" required autocomplete="off" maxlength="40" name="LastName" class="form-control" id="inputSecondName" value="@lastName" placeholder="Отчество">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassportNumber" class="control-label col-sm-2">Личный номер</label>
                        <div class="col-sm-8">
                            <input type="text" required autocomplete="off" maxlength="40" name="PassportNumber" class="form-control" id="inputPassportNumber" value="@passport" placeholder="Личный номер">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmail" class="control-label col-sm-2">E-mail</label>
                        <div class="col-sm-8">
                            <input type="email" required autocomplete="off" maxlength="40" name="Email" class="form-control" id="inputEmail" value="@email" placeholder="E-mail">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmailConfirm" class="control-label col-sm-2">Подтверждение e-mail</label>
                        <div class="col-sm-8">
                            <input type="email" required autocomplete="off" maxlength="40" name="ConfirmEmail" class="form-control" id="inputEmailConfirm" placeholder="Подтверждение e-mail">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="control-label col-sm-2">Пароль</label>
                        <div class="col-sm-8">
                            <input type="password" maxlength="40" autocomplete="off" required name="Password" class="form-control" id="inputPassword" placeholder="Пароль">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPasswordConfirm" class="control-label col-sm-2">Подтверждение пароля</label>
                        <div class="col-sm-8">
                            <input type="password" required autocomplete="off" maxlength="40" name="ConfirmPassword" class="form-control" id="inputPasswordConfirm" placeholder="Подтверждение пароля">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputPhone" class="control-label col-sm-2">Телефон</label>
                        <div class="col-sm-8">
                            <input type="number" min="1" autocomplete="off" max="999999999999" required name="Telephone" class="form-control" value="@tel" id="inputPhone" placeholder="Телефон">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-8">
                            <button type="submit" id="submitBtn" class="btn btn-primary">Зарегистрироваться</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </body>

</html>

<script type="text/javascript">
    $(document).ready(function () {
        $("#submitForm").submit(function () {
            $("#submitBtn").attr("disabled", true);
            return true;
        });
    });
</script>

